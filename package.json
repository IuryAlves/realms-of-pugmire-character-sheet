{
  "dependencies": {
    "glob": "^7.1.6",
    "mustache": "^4.0.1",
    "npm-watch": "^0.7.0"
  },
  "watch": {
    "dev": {
      "patterns": ["templates"],
      "extensions": "mustache"
    }
  },
  "scripts": {
    "build": "./mustache.js --production realms-of-pugmire.mustache realms-of-pugmire.css.mustache dist/realms-of-pugmire.html",
    "dev": "./mustache.js --development",
    "watch": "npm-watch dev"
  }
}
